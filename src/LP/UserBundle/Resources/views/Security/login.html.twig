{# src/LP/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "LPUserBundle::layout.html.twig" %}

{% block body %}

  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}

  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
  <div class="jumbotron col-sm-3 user-login">
      <form action="{{ path('login_check') }}" method="post">
        <div class="form-group">
          <label for="username">Login :</label>
          <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="form-group">
          <label for="password">Password :</label>
          <input type="password" class="form-control" id="password" name="_password" />
        </div>
      {#   <input type="submit" value="Connexion" /> #}
        <button type="submit" class="btn btn-primary pull-right">Submit</button>
      </form>
  </div>

{% endblock %}