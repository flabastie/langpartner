{# src/LP/UserBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Language Partner{% endblock %}</title>
  {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/lppartner/css/bootstrap/css/bootstrap.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/lppartner/css/langpartner.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/lppartner/css/langpartner-user.css') }}" type="text/css" />
  {% endblock %}
</head>

<body>
  <div class="user-container">

        {% block body %}
            {% for message in app.session.flashbag.get('info') %}
                <div class="alert alert-warning" id="success-alert">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}

            {# On d√©finit un nouveau bloc, que les vues du bundle pourront remplir #}
            {% block lppartner_body %}
            {% endblock %}
        {% endblock %}

  </div><!--/.container -->
</body>
</html>