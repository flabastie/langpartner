{# src/LP/PartnerBundle/Resources/view/Member/view-member.html.twig #}

{% extends "LPPartnerBundle::layout.html.twig" %}

{% block title %}
  Language-Partner - {{ parent() }}
{% endblock %}

{% block lppartner_body %}


<div class="panel panel-primary">
  <div class="clickable-row panel-heading" data-href='{{ path('lp_partner_member_list', {'page': page }) }}'>
    <tr>
      <td>{{ member.firstName}}</td>
      <td>{{ member.name}}</td>
    </tr>
      <a href="{{ path('lp_partner_edit_member', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-default btn-xs pull-right">Edit</a>
  </div>

  <div class="panel-body">

    <div class="container">

      <!-- ======================================== member informations ======================================= -->

      <div class="row"><!-- row of columns -->
        <div class="col-md-6">
          <table class="table">
            <tr class="active">
                <td># </td>
                <td>{{ member.id }}</td>
            </tr>
            <tr class="active">
                <td>Name </td>
                <td>{{ member.name}}</td>
            </tr>
            <tr class="active">
                <td>First Name </td>
                <td>{{ member.firstName}}</td>
            </tr>
            <tr class="active">
                <td>Age range </td>
                <td><span class="badge">{{ range }}</span></td>
            </tr>
            <tr class="active">
                <td>Date of birth </td>
                <td>{{ member.dateBirth|date('d/m/Y')}}</td>
            </tr>
            <tr class="active">
                <td>Telephone </td>
                <td>{{ member.telephone}}</td>
            </tr>
            <tr class="active">
                <td>Telephone bis</td>
                <td>{{ member.telephoneBis}}</td>
            </tr>
            <tr class="active">
                <td>Email</td>
                <td>{{ member.email}}</td>
            </tr>
            <tr class="active">
                <td>Category</td>
                <td>{{ member.category }}</td>
            </tr>
            <tr class="active">
                <td>Membership</td>
                <td>{{ member.membership }}</td>
            </tr>
            <tr class="active">
                <td>Status</td>
                <td>{{ member.status }}</td>
            </tr>
            <tr class="active">
                <td>English level</td>
                <td>{{ member.englishLevel }}</td>
            </tr>
            <tr class="active">
                <td>French level</td>
                <td>{{ member.frenchLevel }}</td>
            </tr>
            <tr class="active">
                <td>Objective</td>
                <td>{{ member.objective }}</td>
            </tr>
            <tr class="active">
                <td>Availability </td>
                <td>{{ member.dateStart|date('d/m/Y')}}  -  {{ member.dateEnd|date('d/m/Y')}}</td>
            </tr>
            <tr class="active">
                <td><span class="badge">{{ member.myPartners|length }}</span> 
                  {% if member.myPartners|length > 1 %} Partners {% else %} Partner {% endif %}
                </td>
                <td><a href="{{ path('lp_partner_search_partner', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-primary btn-xs">Search</a></td>
            </tr>
          </table>
        </div><!-- end of col -->

      <!-- ============================================= interests ============================================== -->

        <div class="col-md-4 col-md-offset-1">
          <table class="table">
            <tr class="active">
             <td><span class="badge">{{ totalMemberInterests }} </span> Interests </td>
              </tr>

             {% for id, stringsById in tabInterestsYesNo %}
              <tr>
                {% if stringsById == 1 %}
                    <td class="active"> {{ id | striptags('<b>')|raw }} </td>
                {% else %}
                    <td class="text-light"><s><i> {{ id | striptags('<s><i>')|raw}}</i></s></td>
                {% endif %}
              </tr>
            {% endfor %}

          </table>
        </div><!-- end of col -->

      </div><!-- end row -->

<!-- ========================================= partners =========================================== -->

<div class="row"><!-- row of columns -->
  <div class="col-md-11">
        <table class="table table-hover table-condensed" style="border-collapse:collapse">

          <!-- ========================================= member Row =========================================== -->

          <thead>
            <tr>
              <th data-field="id">#</th>
              <th data-field="fr-en">fr | en</th>
              <th data-field="name">Name</th>
              <th data-field="firstname">Firstname</th>
              <th data-field="telephone">Telephone</th>
              <th data-field="email">email</th>
              <th data-field="range">range</th>
              <th data-field="partners">Partners</th>
              <th data-field="search">Search</th>
              <th data-field="infos">Infos</th>
            </tr>
          </thead>

          {% for member in tabPartners %}

          <tr data-toggle="collapse" data-target="#{{ member.id }}" class="clickable accordion-toggle">

              <td>{{ member.id }}</td>
              <td>{{ member.category }}</td>
              <td>{{ member.name }}</td>
              <td>{{ member.firstName }}</td>
              <td>{{ member.telephone }}</td>
              <td>{{ member.email }}</td>
              <td>{{ tabPartnersRange[member.id] }}</td>
              <td><span class="badge">{{ member.myPartners|length }}</span></td>
              <td><a href="{{ path('lp_partner_search_partner', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-primary btn-xs">Search</a></td>
              <td><a href="{{ path('lp_partner_view_member', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-default btn-xs">View</a><td>
              
          </tr>
          
          <!-- ========================================= hiddenRow =========================================== -->

          <tr>
            <td colspan="10" class="hiddenRow">
              <div class="accordian-body collapse" id="{{ member.id }}">
                <div class="panel panel-default">
                  <div class="panel-body">
                    <div class="row"><!-- row of columns -->
                      <div class="col-md-6"><!-- column -->

                        <table class="table table-condensed table-member">
                          <tr class="active">
                              <td>Name </td>
                              <td>{{ member.name}}</td>
                          </tr>
                          <tr class="active">
                              <td>First Name </td>
                              <td>{{ member.firstName}}</td>
                          </tr>
                          <tr class="active">
                              <td>Age range </td>
                              <td><span class="badge">{{ tabPartnersRange[member.id] }} </span></td>
                          </tr>
                          <tr class="active">
                              <td>Date of birth </td>
                              <td>{{ member.dateBirth|date('d/m/Y')}}</td>
                          </tr>
                          <tr class="active">
                              <td>Telephone </td>
                              <td>{{ member.telephone}}</td>
                          </tr>
                          <tr class="active">
                              <td>Telephone bis</td>
                              <td>{{ member.telephoneBis}}</td>
                          </tr>
                          <tr class="active">
                              <td>Email</td>
                              <td>{{ member.email}}</td>
                          </tr>
                          <tr class="active">
                              <td>Membership</td>
                              <td>{{ member.membership}}</td>
                          </tr>
                          <tr class="active">
                              <td>Status</td>
                              <td>{{ member.status }}</td>
                          </tr>
                          <tr class="active">
                              <td>English level</td>
                              <td>{{ member.englishLevel }}</td>
                          </tr>
                          <tr class="active">
                              <td>French level</td>
                              <td>{{ member.frenchLevel }}</td>
                          </tr>
                          <tr class="active">
                              <td>Objective</td>
                              <td>{{ member.objective }}</td>
                          </tr>
                          <tr class="active">
                              <td>Availability </td>
                              <td>{{ member.dateStart|date('d/m/Y')}}  -  {{ member.dateEnd|date('d/m/Y')}}</td>
                          </tr>
                          <tr class="active">
                              <td><span class="badge">{{ member.myPartners|length }}</span> 
                              {% if member.myPartners|length > 1 %} Partners {% else %} Partner {% endif %}
                              </td>
                              <td><a href="{{ path('lp_partner_search_partner', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-primary btn-xs">Search</a></td>
                          </tr>
                          <tr class="active">
                            <td><span class="badge">
                              {% set count = 0 %}
                              {% for call in listPhonecall %} 
                                {% if member.id == call.member.id %} {% set count = count + 1 %} {% endif %}
                              {% endfor %}
                              {{ count }}
                              </span>
                                {% if count > 1 %} Phone-calls {% else %} Phone-call {% endif %}
                              </td>
                              <td><a href="{{ path('lp_partner_view_member', {'id': member.id, 'page': page }) }}" type="button" class="btn btn-primary btn-xs">View</a></td>
                          </tr>
                          
                        </table>

                      </div><!-- end of col-->

                      <div class="col-md-4 col-md-offset-1">
                        <table class="table table-condensed">

                          <tr class="active">
                              <td><span class="badge"> {{ tabTotalPartnersInterest[member.id] }}</span> Interests</td>
                          </tr>
 
                          {% for id, stringsById in tabPartnersInterestsYesNo[member.id] %}
                          <tr>
                          {% if stringsById == 1 %}
                              <td class="active"> {{ id | striptags('<b>')|raw }} </td>
                          {% else %}
                              <td class="text-light"><i><s> {{ id | striptags('<i><s>')|raw}}</s></i></td>
                          {% endif %}
                          </tr>
                          {% endfor %}

                        </table>
                      </div><!-- end of col-->
                    </div><!-- end of row-->
                  </div><!-- end of panel-body  -->
                </div><!-- end of panel  -->
              </div> 
            </td>
          </tr><!-- end tr -->

          <!-- ========================================= end hiddenRow =========================================== -->

          {% endfor %}
        </table>
      </div><!-- end of col -->
</div><!-- end row -->


      <!-- ========================================= phone calls form =========================================== -->

      <div class="row"><!-- row of columns -->
        <div class="col-md-11">

          <div class="panel panel-default">
            <div class="panel-heading clickable-row accordion-toggle" data-toggle="collapse" data-target="#phonecall" >
              <h3 class="panel-title">
                <span class="badge">{{ totalPhoneCalls }}</span> 
                {% if totalPhoneCalls > 1 %} Phone-calls {% else %} Phone-call {% endif %}
              </h3>
            </div>

            <div  class="hiddenRow">

            <div class="panel-body accordian-body collapse" id="phonecall">

              {# form phonecall #}
              <div class="form-horizontal">
              {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
              {# Les erreurs générales du formulaire. #}
              {{ form_errors(form) }}
                          
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.dateCall) }} 
                <div class="form-group">
                  <label for="form.dateCall" class="col-sm-2 control-label">Date call</label>
                    <div class="col-sm-10">
                      {# Génération de l'input. #}
                      {{ form_widget(form.dateCall, {'attr': {'class': 'date-input'}}) }}  
                    </div>
                </div>

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.noteCall) }} 
                <div class="form-group">
                  <label for="form.noteCall" class="col-sm-2 control-label">Note call</label>
                    <div class="col-sm-10">
                      {# Génération de l'input. #}
                      {{ form_widget(form.noteCall, {'attr': {'class': 'form-control'}}) }}  
                    </div>
                    
                    {# Bouton de validation #}
                    <div class="validation">
                      {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-sm'}}) }}
                    </div>
                </div>

                {{ form_rest(form) }} 
                {{ form_end(form) }} 

              </div><!-- end of form -->
              {# end form phonecall #}

        <!-- ========================================= phone calls list =========================================== -->

              <div class="row"><!-- row of columns -->
                <div class="col-md-12">
                  <table class="table">

                    {% set count = 1 %}
                    {% for call in listPhonecall %}
                    <tr>
                      <td>Call {{ count }} </td>
                      <td>{{ call.dateCall|date('d/m/Y')}} </td>
                      <td>Author call : {{ call.user.username }} </td>
                      <td> Comment : </td>
                      <td> {{ call.noteCall }}</td>
                    </tr>
                    {% set count = count + 1 %}
                    {% endfor %}

                  </table>
                </div><!-- end col -->
              </div><!-- end row -->






          <!-- ================================================ end ================================================= -->

            </div><!-- end of panel-body -->
            </div>
          </div><!-- end of panel -->

        </div><!-- end of col -->
      </div><!-- end of row -->

    </div><!-- end of container -->
  </div><!-- end of panel-body -->
</div><!-- end of panel -->

{% endblock %}